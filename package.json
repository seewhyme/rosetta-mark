{
  "name": "rosetta-mark",
  "displayName": "Rosetta Mark",
  "description": "AI-powered Markdown translation with context awareness and incremental updates",
  "version": "0.1.1",
  "publisher": "seewhyme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "markdown",
    "translation",
    "ai",
    "openai",
    "claude",
    "gemini",
    "ollama",
    "i18n",
    "localization"
  ],
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/seewhyme/rosetta-mark"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rosettaMark.translate",
        "title": "Translate Markdown",
        "category": "Rosetta Mark",
        "icon": "$(globe)"
      },
      {
        "command": "rosettaMark.setApiKey",
        "title": "Set API Key",
        "category": "Rosetta Mark"
      },
      {
        "command": "rosettaMark.reverseTranslate",
        "title": "Reverse Translate to Source",
        "category": "Rosetta Mark",
        "icon": "$(reply)"
      },
      {
        "command": "rosettaMark.batchTranslate",
        "title": "Batch Translate",
        "category": "Rosetta Mark",
        "icon": "$(files)"
      },
      {
        "command": "rosettaMark.translateSelection",
        "title": "Translate Selection",
        "category": "Rosetta Mark"
      },
      {
        "command": "rosettaMark.cancelTranslation",
        "title": "Cancel Translation",
        "category": "Rosetta Mark",
        "icon": "$(close)"
      }
    ],
    "keybindings": [
      {
        "command": "rosettaMark.translate",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorLangId == markdown"
      },
      {
        "command": "rosettaMark.translateSelection",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorHasSelection"
      },
      {
        "command": "rosettaMark.cancelTranslation",
        "key": "escape",
        "when": "rosettaMark.isTranslating"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "rosettaMark.translate",
          "when": "resourceLangId == markdown && !resourcePath =~ /\\.rosetta-mark/",
          "group": "navigation"
        },
        {
          "command": "rosettaMark.reverseTranslate",
          "when": "resourceLangId == markdown && resourcePath =~ /\\.rosetta-mark/",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "rosettaMark.translate",
          "when": "resourceLangId == markdown && !resourcePath =~ /\\.rosetta-mark/",
          "group": "1_modification"
        },
        {
          "command": "rosettaMark.translateSelection",
          "when": "editorHasSelection",
          "group": "1_modification"
        }
      ],
      "explorer/context": [
        {
          "command": "rosettaMark.batchTranslate",
          "when": "resourceLangId == markdown || explorerResourceIsFolder",
          "group": "7_modification"
        }
      ]
    },
    "configuration": {
      "title": "Rosetta Mark",
      "properties": {
        "rosettaMark.provider": {
          "type": "string",
          "enum": [
            "openai",
            "google",
            "anthropic",
            "ollama",
            "openrouter"
          ],
          "default": "openai",
          "description": "AI provider to use for translation"
        },
        "rosettaMark.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "Model name (e.g., gpt-4o-mini, claude-3-5-sonnet-20241022)"
        },
        "rosettaMark.baseUrl": {
          "type": "string",
          "default": "",
          "description": "Optional custom base URL (for proxies or OpenAI-compatible APIs)"
        },
        "rosettaMark.targetLanguage": {
          "type": "string",
          "default": "zh-CN",
          "description": "Target language code (e.g., zh-CN, en, ja)"
        },
        "rosettaMark.previewMode": {
          "type": "string",
          "enum": [
            "editor",
            "preview",
            "both"
          ],
          "enumDescriptions": [
            "Open translated file in editor (split view)",
            "Open translated file in editor (split view, default)",
            "Open both editor and preview panel"
          ],
          "default": "preview",
          "description": "How to display the translation after completion"
        },
        "rosettaMark.maxConcurrency": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "Maximum number of paragraphs to translate in parallel"
        },
        "rosettaMark.glossary": {
          "type": "array",
          "default": [],
          "items": {
            "type": "object",
            "properties": {
              "source": {
                "type": "string",
                "description": "Source term"
              },
              "target": {
                "type": "string",
                "description": "Target translation"
              },
              "caseSensitive": {
                "type": "boolean",
                "default": false,
                "description": "Whether the term is case-sensitive"
              }
            },
            "required": [
              "source",
              "target"
            ]
          },
          "description": "Custom glossary for consistent terminology translation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run esbuild",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "esbuild": "node esbuild.js --production",
    "watch:esbuild": "node esbuild.js --watch",
    "pretest": "pnpm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "husky install",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "mocha": "^10.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.0.0",
    "@ai-sdk/google": "^1.0.0",
    "@ai-sdk/openai": "^1.0.0",
    "ai": "^4.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.0"
  }
}